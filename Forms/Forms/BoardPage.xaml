<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Forms.BoardPage"
             BackgroundColor="White">
    <StackLayout>
        <Grid
            x:Name="Board"
            IsVisible="False"
            RowDefinitions="100, 100, 100" 
            ColumnDefinitions="100, 100, 100"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            BackgroundColor="Black">
            <!-- Tiles -->
            <Button Grid.Row="0" Grid.Column="0" BackgroundColor="LightGray" />
            <Button Grid.Row="0" Grid.Column="1" BackgroundColor="LightGray" />
            <Button Grid.Row="0" Grid.Column="2" BackgroundColor="LightGray" />
            <Button Grid.Row="1" Grid.Column="0" BackgroundColor="LightGray" />
            <Button Grid.Row="1" Grid.Column="1" BackgroundColor="LightGray" />
            <Button Grid.Row="1" Grid.Column="2" BackgroundColor="LightGray" />
            <Button Grid.Row="2" Grid.Column="0" BackgroundColor="LightGray" />
            <Button Grid.Row="2" Grid.Column="1" BackgroundColor="LightGray" />
            <Button Grid.Row="2" Grid.Column="2" BackgroundColor="LightGray" />
        </Grid>
        
        <!-- TODO: hide until game is over -->
        <Button Text="New Game"/>
    </StackLayout>
</ContentPage>